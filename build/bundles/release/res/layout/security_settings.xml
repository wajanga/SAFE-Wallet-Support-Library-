<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget95"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_above="@+id/widget929"
    android:layout_below="@+id/widget99"
    android:background="@drawable/button_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/widget236"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title"
        android:gravity="center"
        android:padding="10dip"
        android:shadowColor="#ff003333"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="@string/security_settings"
        android:textColor="#ff000066"
        android:textSize="24sp"
        android:textStyle="bold" >
    </TextView>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:orientation="vertical" >

            <Button
                android:id="@+id/change_app_PIN"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/last_button_bg"
                android:drawableLeft="@drawable/change_wallet_pin"
                android:gravity="fill"
                android:padding="10dip"
                android:paddingLeft="10dip"
                android:text="@string/_change_application_pin"
                android:textColor="#ff3c0000"
                android:textSize="18sp"
                android:textStyle="bold" >
            </Button>

            <Button
                android:id="@+id/change_SAFE_PIN"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/last_button_bg"
                android:drawableLeft="@drawable/change_safe_pin"
                android:gravity="fill"
                android:padding="10dip"
                android:paddingLeft="10dip"
                android:text="@string/_change_safe_system_pin"
                android:textColor="#ff3c0000"
                android:textSize="18sp"
                android:textStyle="bold" >
            </Button>

            <Button
                android:id="@+id/req_certificate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/last_button_bg"
                android:drawableLeft="@drawable/request_certificate"
                android:gravity="fill"
                android:padding="10dip"
                android:paddingLeft="10dip"
                android:text="@string/_request_certificates"
                android:textColor="#ff3c0000"
                android:textSize="18sp"
                android:textStyle="bold" >
            </Button>

            <Button
                android:id="@+id/security_options"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/last_button_bg"
                android:drawableLeft="@drawable/security_options"
                android:gravity="fill"
                android:padding="10dip"
                android:paddingLeft="10dip"
                android:text="@string/_security_options"
                android:textColor="#ff3c0000"
                android:textSize="18sp"
                android:textStyle="bold" >
            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>